{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": false,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "vite/client",
            "@types/jest"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.js",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "public",
        "tests"
    ]
}